                                <div class="pd-color">
                                    <h6>Color</h6>
                                    <div class="pd-color-choose">
                                        <div class="color-item-container">
                                            <input type="radio" id="choose-black">
                                            <label for="choose-black"></label>
                                        </div>
                                        <div class="color-item-container">
                                            <input type="radio" id="choose-yellow">
                                            <label for="choose-yellow" class="choose-yellow"></label>
                                        </div>
