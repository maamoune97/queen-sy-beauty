    <!-- Related Products Section End -->
    <div class="related-pr">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Articles similaires</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for product in sameProducts %}
                    <div class="col-lg-3 col-sm-6">
                        <div class="box">
                            <div class="slide-img">
                                <img src="{{asset(product.coverImage)}}" alt="{{product.name}}">
                                <div class="overlay">
                                    <a href="{{path('product_show', {'slug': product.slug, 'id': product.id})}}" class="buy-btn">
                                        Acheter Maintenant
                                    </a>
                                </div>
                            </div>

                            <div class="detail-box">
                                <div class="type">
                                    <span class="article-name" href="{{path('product_show', {'slug': product.slug, 'id': product.id})}}">{{product.name}}</span>
                                    <span>{{product.subCategory.category.name}}</span>
                                </div>
                                <span class="price">{{product.price | price}}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
