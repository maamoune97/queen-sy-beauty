{% extends "base.html.twig" %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text product-more">
                        <a href="{{path('home')}}"><i class="fa fa-home"></i> Acceuil</a>
                        <a href="{{path('shop_index')}}">Boutique</a>
                        <a href="{{path('cart_show')}}">Panier</a>
                        <span>passer la Commande</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section Begin -->

    <!-- Shopping Cart Section Begin -->
    <section class="checkout-section">
        <div class="container">
            <div class="checkout-ctnt">
                <a href="{{path('app_login')}}" class="content-btn">Se connecter</a>
            </div>
            <form action="#" class="checkout-form" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <h4>Information personnelle</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <label for="fir">Nom<span>*</span></label>
                                <input type="text" id="fir">
                            </div>
                            <div class="col-lg-6">
                                <label for="last">Prénom<span>*</span></label>
                                <input type="text" id="last">
                            </div>
                            <div class="col-lg-6">
                                <label for="email">Adresse Email<span>*</span></label>
                                <input type="text" id="email">
                            </div>
                            <div class="col-lg-6">
                                <label for="phone">Téléphone<span>*</span></label>
                                <input type="text" id="phone">
                            </div>
                            <div class="col-lg-12">
                                <label for="street">Adresse<span>*</span></label>
                                <input type="text" id="street" class="street-first">
                            </div>
                            <div class="col-lg-12">
                                <div class="create-account-container">
                                    <label for="account-create-radio">
                                        Créer un compte
                                        <input type="checkbox" id="account-create-radio">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="place-order">
                            <h4>Votre commande</h4>
                            <div class="order-total">
                                <ul class="order-table">
                                    <li>Article <span>Total</span></li>
                                    {% for item in products %}
                                        <li class="fw-normal">{{item.product.name}} x {{item.quantity}} <span>{{(item.product.price * item.quantity) | price}}</span></li>
                                    {% endfor %}
                                    <li class="fw-normal">Sous-total <span>{{subTotalPrice | price}}</span></li>
                                    <li class="fw-normal">Frais de service<span>{{0 | price}}</span></li>
                                    <li class="total-price">Total <span>{{subTotalPrice | price}}</span></li>
                                </ul>
                                <div class="payment-check">
                                    <div class="pc-item">
                                        <label for="pc-check">
                                            Paiement par mvoula
                                            <input type="checkbox" id="pc-check">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="pc-item">
                                        <label for="pc-paypal">
                                            Paiement lors de la recupération
                                            <input type="checkbox" id="pc-paypal">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="order-btn">
                                    <button type="submit" class="site-btn place-btn">Place Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Shopping Cart Section End -->
{% endblock body %}