            <div class="single-caroussel-items caroussel-baground" data-bgcaroussel="{{asset('media/images/static/hero-3.jpg')}}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">
                            <span>Bag,kids</span>
