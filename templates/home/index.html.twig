            <div class="single-caroussel-items caroussel-baground" data-bgcaroussel="{{asset('media/images/static/hero-2.jpg')}}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">
                            <span>Bag,kids</span>
                            <h1>Black friday</h1>
