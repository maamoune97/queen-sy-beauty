{{form_start(form)}}
<div class="row">
    <div class="col-12 col-md-6">
        {{form_row(form.name)}}
    </div>
    <div class="col-12 col-md-6">
        {{form_row(form.type)}}
    </div>
</div>
{{form_rest(form)}}
<div class="float-right form-group">
    <button type="submit" class="btn btn-success">{{submitBtnLabel}}</button>
</div>
{{form_end(form)}}