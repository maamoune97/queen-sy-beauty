{% extends "admin/base.html.twig" %}
{% block styles %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Créer un article</h1>

        {{form_start(form)}}

        <div class="row">
            <div class="col-12 col-md-6 form-group">
                {{form_row(form.name)}}
            </div>
            <div class="col-12 col-md-6 form-group">
                {{form_row(form.subCategory)}}
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-9 form-group">
                {{form_row(form.coverImage)}}
            </div>
            <div class="col-12 col-md-3 form-group">
                {{form_row(form.price)}}
            </div>
        </div>
        <div class="row">
            <div class="col form-group">
                {{form_row(form.description)}}
            </div>
        </div>
        <div class="row">
            <div class="col form-group">
                {{form_row(form.visible)}}
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Créer l'article">
        </div>
        {{form_end(form)}}
    </div>    
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
$(document).ready(function() {
    $('.js-example-basic-single').select2();
});
</script>

<script src="{{ asset('assets/js/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(function() {
        $('textarea.ckeditor').ckeditor();
    });
</script>
{% endblock %}