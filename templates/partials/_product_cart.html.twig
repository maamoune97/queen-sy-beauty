	<div class="box">
		<div class="slide-img">
			<img src="{{asset(product.coverImage)}}" alt="{{product.name}}">
			<div class="overlay">
				<a href="{{path('product_show', {'slug': product.slug, 'id': product.id})}}" class="buy-btn">
